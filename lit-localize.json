{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["tr-TR"],
  "inputFiles": ["src/**/*.js"],
  "output": {
    "mode": "runtime",
    "outputDir": "./src/localization/generated/locales",
    "localeCodesModule": "./src/localization/generated/locale-codes.js",
    "language": "js"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "./src/localization/locales"
  }
}
